{% extends 'base.html.twig' %}

{% block title %}Borrowing{% endblock %}
 {% block headTitle %}Détail d'emprunt{% endblock %}

{% block body %}


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ borrowing.id }}</td>
            </tr>
            <tr>
                <th>Date d'emprunt</th>
                <td>{{ borrowing.borrowDate ? borrowing.borrowDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de retour estimée</th>
                <td>{{ borrowing.expectedReturnDate ? borrowing.expectedReturnDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de retour</th>
                <td>
                    {% if borrowing.actualReturnDate is not null %}
                        {{ borrowing.actualReturnDate|date('Y-m-d') }}
                    {% else %}
                        Aucune date de retour définie
                    {% endif %}
                </td>
            </tr>            
            <tr>
                <th>Commentaire</th>
                <td>
                    {% if borrowing.comment is not null %}
                        {{ borrowing.comment }}
                    {% else %}
                       RAS
                    {% endif %}
                </td>
            </tr>
            

            <tr>
                <th>Étudiant</th>
                <td>
                    {% if borrowing.student is not null %}
                        {{ borrowing.student.firstname }}
                    {% else %}
                        Il n'y a personne
                    {% endif %}
                </td>
            </tr>

            <tr>
                <th>Employé</th>
                <td>
                    {% if borrowing.employee is not null %}
                        {{ borrowing.employee.firstname }}
                    {% else %}
                        Il n'y a personne
                    {% endif %}
                </td>
            </tr>


        
            

        </tbody>
    </table>

    <a href="{{ path('app_borrowing_index') }}" class="btn">Retour à l'historique</a>

    <a href="{{ path('app_borrowing_edit', {'id': borrowing.id}) }}" class="btn">Modifier</a>

    {{ include('borrowing/_delete_form.html.twig') }}
{% endblock %}
